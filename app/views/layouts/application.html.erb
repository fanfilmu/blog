<!DOCTYPE html>
<html>
  <head>
    <title>Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if notice %>
      <div class="alert alert-info">
        <%= notice %>
      </div>
    <% end %>

    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>

    <% if user_signed_in? %>
      <p>
        <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
      </p>
    <% end %>

    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
